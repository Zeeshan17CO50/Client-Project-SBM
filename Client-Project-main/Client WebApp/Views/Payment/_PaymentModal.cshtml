@model Client_WebApp.Models.AddPaymentViewModel

<div class="modal fade" id="payment-modal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="paymentModalLabel">Add Payment</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="CreateOrEdit" method="post" id="paymentForm">
                @Html.AntiForgeryToken()
                <input asp-for="Id" type="hidden" />
                <input asp-for="CompanyId" type="hidden" />

                <div class="modal-body">
                    <div class="row g-3">

                        <!-- Invoice -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="InvoiceNo" class="form-label">Invoice No</label>
                            <select asp-for="InvoiceNo" class="form-select" id="invoiceSelect" asp-items="Model.Invoices">
                                <option value="">--Select Invoice--</option>
                            </select>
                            <span asp-validation-for="InvoiceNo" class="text-danger"></span>
                        </div>

                        <!-- Payment Type Radio -->
                        <div class="col-md-6">
                            <label class="form-label d-block">Period</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ModalDurationType" id="modalDayRadio" value="day">
                                <label class="form-check-label" for="modalDayRadio">Day</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="ModalDurationType" id="modalDurationRadio" value="duration">
                                <label class="form-check-label" for="modalDurationRadio">Duration</label>
                            </div>
                        </div>

                        <!-- Payment Date -->
                        <div class="col-md-6" id="modalPaymentDateDiv">
                            <label asp-for="PaymentDate" class="form-label">Payment Date</label>
                            <input asp-for="PaymentDate" type="date" class="form-control" />
                            <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        </div>

                        <!-- From and To Date -->
                        <div class="col-md-6 d-none" id="modalFromDateDiv">
                            <label asp-for="FromDate" class="form-label">From Date</label>
                            <input asp-for="FromDate" type="date" class="form-control" />
                            <span asp-validation-for="FromDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 d-none" id="modalToDateDiv">
                            <label asp-for="ToDate" class="form-label">To Date</label>
                            <input asp-for="ToDate" type="date" class="form-control" />
                            <span asp-validation-for="ToDate" class="text-danger"></span>
                        </div>

                        <!-- Amount Paid -->
                        <div class="col-md-6">
                            <label asp-for="AmountPaid" class="form-label">Amount Paid</label>
                            <input asp-for="AmountPaid" type="number" class="form-control" step="0.01" />
                            <span asp-validation-for="AmountPaid" class="text-danger"></span>
                        </div>

                        <!-- Bank -->
                        <div class="col-md-6" id="modalBankDiv">
                            <label asp-for="BankId" class="form-label">Bank Name</label>
                            <select asp-for="BankId" class="form-select" asp-items="Model.Bankes">
                                <option value="">--Select Bank--</option>
                            </select>
                            <span asp-validation-for="BankId" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="modalSaveButton">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
